<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="../../dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
      </div>
      <div class="pull-left info">
        <p><%= show_fullname @user.fullname %></p>
      </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">GŁÓWNA NAWIGACJA</li>
      <li>
        <%= link_to panel_pages_path do %>
          <i class="fa fa-file-text-o"></i> <span>Strony</span>
          <span class="pull-right-container">
            <small class="label pull-right bg-green"><%= @pages_count %></small>
          </span>
        <% end %>
      </li>
      <li>
        <%= link_to panel_users_path do %>
          <i class="fa fa-users"></i> <span>Użytkownicy</span>
          <span class="pull-right-container">
            <small class="label pull-right bg-green"><%= @users_count %></small>
          </span>
        <% end %>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>